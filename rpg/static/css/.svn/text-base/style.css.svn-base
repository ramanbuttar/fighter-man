td, th {
  padding: 3px;
  border: none;
}

tr th {
  text-align: left; 
  background-color:#f0f0f0; 
  color:#333;
}

a.link, a, a.active {
  color: navy;
}

a:hover {
  color: #FFCC00;
}

h1, h2, h3, h4, h5, h6{
  font-weight: bold;
}

h2 {
  font-size: 150%;
}


#fightagain {
  font-size: 150%;
}

body {
  color: black;
  background-color: gray;
  font: small "Lucida Grande", "Lucida Sans Unicode", geneva, verdana, sans-serif;
  margin: 0;
  padding: 0;
}

#container {
  margin: 0 auto;
  border: 2px solid black;
  padding-left: 4%;
  padding-right: 4%;
  padding-top: 20px;
  padding-bottom: 150px;
  background: #6FB7FF; /* sky blue */
  width: 800px;
}

.tabbertab, table {
  background: white;
}

.tabbertab table {
  border: 1px solid #ddd;
}

#header #img, #header #img_bg{
  position: absolute;
  top: 10px;
  width: 800px;
  height: 100px;
  background: url('../images/header.png') no-repeat;
  z-index: 2;
}

#header #img_bg{
  background: url('../images/header_bg.png') no-repeat;
  z-index: 0;
}

#header h1 {
  margin-top: 100px;
  height: 0px;
  text-indent: -2000px;
}

#loginBox {
  background: white;
  border: 2px black solid;
  width: 300px;
  padding-left: 5px;
  margin-top: 25px;
}

#avatar {
  position: fixed;
  top: 20px;
  left: 4px;
  height: 0px;
}

#avatar p{
  border: 1px black solid;
  background: white;
  padding: 2px;
}

#nav a:hover {
  	text-decoration:underline;
}

.money {
	color:white;
}

#nav a {
  text-decoration:none;
}

#nav{
	text-align:center;
    border:thin solid black;
	padding: 5px;
	width: 60%;
	margin-bottom: 25px;
	margin-left: 200px;
	font-weight:bold;
	background-color:white;
}

#myauctions {
	border:none;
	width:100%;
}

h1 {
  margin: 0 0 0 0;
}

#title_home, #title_gym, #title_shop, #title_auction, #title_arena, #title_chat, #title_fight
{
  position: absolute;
  top: 120px;
  width: 183px;
  height: 34px;
  background-repeat: no-repeat;
  text-indent: -2000px;
  z-index: 3;
}

#title_home {
  background-image: url('../images/title_home.png');
}

#title_gym {
  background-image: url('../images/title_gym.png');
}

#title_shop {
  background-image: url('../images/title_shop.png');
}

#title_auction {
  background-image: url('../images/title_auction.png');
}

#title_arena {
  background-image: url('../images/title_arena.png');
}

#title_chat {
  background-image: url('../images/title_chat.png');
}

#title_fight {
  background-image: url('../images/title_fight.png');
}

#badge {
  width: 45%;
  border: 1px solid #888;
}

#feed {
  width: 50%;
  padding: 3px;
  background: white;
  border: 1px solid #888;
}

#feed h2 {
  margin: 2px;
}

#shop {
  width: 75%;
}

#shopdiv {
  width:25%;
  float:right;
  border:1px solid black;
  margin-top:20px;
  background-color:white;
  padding:5px;
  margin-right:-25px;
}
#shopdiv h2 {
  margin: 2px;
}
.whiteTable{
  background: transparent;
  border: none;
  /*background: white;
  border: thin solid black;*/
}

.whiteTable td{
  vertical-align: top;
}

.tableform table {
  margin: 10px 0 0 0;
  border: solid black 1px;
}

.code {
  font-family: monospace;
}

span.code {
  font-weight: bold;
  background: #eee;
}

#status_block {
  margin: 0 auto 0.5em auto;
  padding: 15px 10px 15px 55px;
  background: white URL('../images/ok.png') left center no-repeat;
  border: 1px solid black;
  width: 450px;
  font-size: 120%;
  font-weight: bolder;
}

.notice {
  margin: 0.5em auto 0.5em auto;
  padding: 15px 10px 15px 55px;
  width: 450px;
  background: #eef URL('../images/info.png') left center no-repeat;
  border: 1px solid #cce;
}

.fielderror {
    color: red;
    font-weight: bold;
}

.floatRight {
   float: right;
}

.floatLeft {
   float: left;
}

#wins {
  font-weight: bold;
  color: green;
}

#losses {
  font-weight: bold;
  color: red;
}

#draws {
  font-weight: bold;
  color: black;
}

#level {
  font-weight: bold;
  color: black;
}

#stat {
  font-weight: bold;
  color: black;
}

#fighter {
  position: relative;
}

#card {
  margin: 0 auto;
  text-align: center;
  width:100%;
}

#card th {
  text-align: center;
}

#fighter_stats {
  border: solid black 1px;
  padding: 4px;
}

#home{
  position: relative;
  float: left;
  top: -420px;
  left: 175px;
  width: 80%;
}

#locker table{
  margin-bottom: 5px;
}

.noBorder {
  border: none;
}

#nav_float{
  bottom: 0px;
  width : 1000px;
  margin: 0 auto;
  text-align: center;
  z-index: 1;
  position:fixed;
  margin-left:-7%;
}

